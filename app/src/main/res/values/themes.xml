<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CafePOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Theme.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/grey_600</item>
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.FilledFabButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="fabSize">mini</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">24dp</item>
        <item name="backgroundTint">@color/grey_600</item>
        <item name="tint">@color/grey_50</item>
    </style>


    <style name="Theme.BorderlessFabButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="fabSize">mini</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/grey_700</item>
    </style>
</resources>